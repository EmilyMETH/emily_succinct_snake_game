{
  "name": "succinct",
  "version": "0.0.1",
  "description": "",
  "main": "lib/index.js",
  "jsnext:main": "es/index.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "watch": "rm -rf lib && tsc -w -p ./ -outDir lib -module commonjs",
    "lib": "rm -rf es && tsc  -p ./",
    "build:commonjs": "./node_modules/.bin/tsc -p ./ -outDir lib -module commonjs",
    "build:es": "./node_modules/.bin/tsc -p ./",
    "build:umd": "cross-env BABEL_ENV=es NODE_ENV=development ./node_modules/.bin/rollup --config rollup.config.js src/index.ts",
    "build:umd:min": "cross-env BABEL_ENV=es NODE_ENV=production ./node_modules/.bin/rollup --config rollup.config.js  src/index.ts",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "test": "ava"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "ava": {
    "files": [
      "**/*.test.js"
    ],
    "source": [
      "**/*.{ts,js}",
      "!lib/**/*",
      "!es/**/*",
      "!dist/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "verbose": true,
    "powerAssert": false,
    "require": [
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "author": "洛丹",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-plugin-next": "^0.0.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.24.1",
    "react": "^15.6.1",
    "rollup": "^0.48.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^2.0.1",
    "tslint": "^5.6.0",
    "typescript": "2.4.2"
  },
  "dependencies": {
    "react-dom": "^15.6.1"
  }
}
